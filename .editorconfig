root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
insert_final_newline = true
trim_trailing_whitespace = true

[{*.yml,*.yml.example}]
indent_style = space
indent_size = 2

[*.md]
trim_trailing_whitespace = false

[*.{py,php,html}]
indent_style = space
indent_size = 4
